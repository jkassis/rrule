{
  "compilerOptions": {
    "declaration": true,
    "incremental": false,
    "declarationMap": true,
    "importHelpers": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "dist/esm",
    "rootDirs": ["./src/"],
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ESNext",
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
